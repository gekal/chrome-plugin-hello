{
  "manifest_version": 3,
  "name": "WebView Mock",
  "version": "1.0",
  "description": "WebViewのモックをサポートする",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "androidInterface.js"
      ],
      "matches": [
        "https://gekal-study-android.github.io/*"
      ]
    }
  ]
}
